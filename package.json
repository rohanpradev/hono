{
  "name": "restaurants-api",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build:code": "bun build --target bun --outdir dist src/index.ts",
    "start:build": "bun run ./dist/index.js",
    "test": "bun run test",
    "lint": "bunx --bun biome check --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "cross-env DB_SEEDING=true bun run src/db/seed.ts",
    "db:view": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.8",
    "@neondatabase/serverless": "^1.0.1",
    "@scalar/hono-api-reference": "^0.9.6",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.2",
    "hono-pino": "^0.8.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/bun": "^1.2.17",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1"
  }
}
